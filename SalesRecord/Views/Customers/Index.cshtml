@model IEnumerable<SalesRecord.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Customers:List</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle-dotted"></i> &nbsp; Create New Customer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CAdress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody >
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CAdress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CId" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CId" class="btn btn-primary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
